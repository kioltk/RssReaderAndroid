<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#484848"
        android:id="@+id/entryTileView"
        android:visibility="gone"
        >

        <com.agcy.reader.CustomViews.SuperImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tileImage"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:background="#aa202020">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tileTitle"
                android:text="title"
                android:textSize="28dp"
                android:textColor="#f0f0f0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tileDate"
                android:gravity="right"
                android:text="title"
                android:textColor="#a0a0a0"/>
            </LinearLayout>

        </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/entryFullView"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">
            <LinearLayout
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/category_simple"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/origin"
                        android:text="1123"
                        android:layout_below="@+id/image"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/entryFullTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="80dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="#484848"
                        />

                    <com.agcy.reader.CustomViews.SuperImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/image"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:layout_below="@+id/entryFullTitle" />
                    <TextView
                        android:id="@+id/entryFullDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="#808080"
                        android:layout_below="@+id/image"
                        android:layout_alignParentRight="true"/>



                </RelativeLayout>
                <TextView
                    android:id="@+id/entryFullContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Content"
                    android:textSize="15sp"
                    android:typeface="serif"  />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
