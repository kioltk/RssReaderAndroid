<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <gradient
                android:startColor="#f0f0f0"
                android:endColor="#e0e0e0"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="#ffc8c8c8"
                />
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>
    <item android:top="48dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#88ffb300"
                />
        </shape>
    </item>
</layer-list>