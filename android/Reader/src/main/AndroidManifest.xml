<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agcy.reader"
    android:versionCode="1"
    android:versionName="0.4" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.agcy.reader.StartActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.agcy.reader.SigninActvitiy"
            android:label="@string/title_activity_signin_actvitiy"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.agcy.reader.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="com.agcy.reader.EntryActivity"
            android:label="@string/title_activity_entry"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.agcy.reader.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.agcy.reader.SettingsActivity"
            android:label="@string/title_activity_settings"
            >
        </activity>
        <receiver android:name="com.agcy.reader.BackgroundActivity" />
    </application>

</manifest>
